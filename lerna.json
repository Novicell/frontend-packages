{
  "packages": [
    "packages/core/*",
    "packages/vanilla/*",
    "packages/vue/*",
    "packages/css/*",
    "packages/configs/*"
  ],
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": ["master", "main", "feature/*", "feat/*"]
    }
  },
  "changelogPreset": {
    "name": "conventionalcommits",
    "issueUrlFormat": "{{host}}/{{owner}}/{{repository}}/issues/{{id}}"
  }
}
